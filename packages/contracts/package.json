  "main": "index.js",
  "scripts": {
    "compile": "yarn hardhat compile",
    "copybuild": "cp -rf build ../frontend/src/contractbuild && cp -r deployments ../frontend/src/contractdeployments",
    "deleteExistingBuild": "rm -rf ../frontend/src/contractbuild && rm -rf ../frontend/src/contractdeployments",
    "deploy": "yarn hardhat deploy --network localhost",
    "ganache": "npx ganache-cli -q --networkId 1337 --chainId 1337 --account='0x2c6036688de3383aac61e305b3bf91bc567f508ce01db108d17e62ca364a2488,10000000000000000000000' --account='0x6d61bdbd9c2cd61f2be4b8aaf3cb930cb317028389f8f7f7f454ccc98d36d4f5,10000000000000000000000'  --account='0x21f33ccbc687ce720efee931d205f8f7b77d40c6cd2863c1cc61fc0a472c4cc9,10000000000000000000000'",
    "lint": "yarn solhint 'contracts/**/*.sol' && yarn prettier --check './**'",
    "lint:fix": "yarn sort-package-json && yarn prettier --write './**' && yarn solhint --fix 'contracts/**/*.sol'",
    "start:app": "cp -rf build/gsn/. gsn && yarn deploy && yarn deleteExistingBuild && yarn copybuild && yarn ts-node scripts/config/config.ts",
    "start:node": "yarn concurrently --kill-others \"yarn hardhat node\" \"yarn wait-on tcp:8545 && yarn gsn start localhost\" ",
    "test": "yarn concurrently --kill-others --success \"first\"  \"yarn hardhat node > /dev/null\" \"yarn wait-on tcp:8545 && yarn gsn start localhost > /dev/null\" \"yarn wait-on tcp:8545 && yarn hardhat test\" "
  },
  "dependencies": {
    "@nomiclabs/buidler": "^1.4.8",
    "@opengsn/contracts": "2.2.2",
    "@opengsn/provider": "2.2.2"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@opengsn/gsn": "2.2.0-beta.1",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.1",
    "chai": "^4.3.4",
    "concurrently": "^6.3.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.1",
    "ganache-cli": "^6.12.2",
    "hardhat": "^2.6.6",
    "hardhat-deploy": "^0.9.4",
    "hardhat-preprocessor": "^0.1.4",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "run-with-testrpc": "0.3.1",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "sort-package-json": "^1.53.0",
    "ts-node": "^10.4.0",
    "typechain": "^5.2.0",
    "typescript": "^4.4.4",
    "wait-on": "^6.0.0"
  }
}
